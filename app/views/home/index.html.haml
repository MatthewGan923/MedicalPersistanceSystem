%p#notice= notice
%h1 Survey
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th MRN
      %th Age
      
      %th{:colspan => "3"}
  %tbody
    - @questions.each do |question|
      %tr
        %td= link_to question.name,dashboard_path
        %td= question.mrn
        %td= question.age
        %td= link_to 'Show', question
        %td= link_to 'Edit', edit_question_path(question)
        %td= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Response', new_question_path

- if current_user
  = link_to 'Logout', destroy_user_session_path, method: :delete , :class => "btn btn-outline-success",:id => "center"
