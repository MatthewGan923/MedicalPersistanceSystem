.container
  %p#notice= notice
  %h2{style: 'color: #007bff;'} List of Patients
  %br/
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th MRN
        %th Age
      
        %th{:colspan => "3"} Actions
    %tbody
      - @questions.each do |question|
        %tr
          %td= link_to question.name,dashboard_path(question)
          %td= question.mrn
          %td= question.age
          %td= link_to 'Show Response', question
          %td= link_to 'Edit Response', edit_question_path(question)
          %td= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  // = link_to 'New Response', new_question_path

  - if current_user
    = link_to 'Logout', destroy_user_session_path, method: :delete , :class => "btn btn-outline-success",:id => "center"
