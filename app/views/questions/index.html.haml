%p#notice= notice
%h1 Survey
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th MRN
      %th Age
      
      %th{:colspan => "3"}
  %tbody
    - @questions.each do |question|
      %tr
        %td= link_to question.name, dashboard_path(question)
        %td= question.mrn
        %td= question.age
        %td= link_to 'Show', question
        %td= link_to 'Edit', edit_question_path(question)
        %td= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Response', new_question_path
= link_to 'Back to Home Page', root_path, :class => "btn btn-outline-success",:id => "center"
